<% unless @thought.strands.any? %>
  <p><em>No strands yet.</em></p>
<% else %>
  <div class="card">
    <div class="card-body">
      <!-- <h5 class="card-title">Stori for <strong><%= @thought.name %></strong></h5> -->
      <!-- <h6 class="card-subtitle mb-2 text-muted"><%= @thought.name %></h6> -->
      <p class="card-text">
        <% @thought.strands.each_with_index do |strand,index| %>
          <%= strand.annotation.body %><sup><%= link_to edit_source_path(strand.annotation.source_id), class: "deco-none" do %><%= @thought.source_info[1][index] %></sup><% end %>
        <% end %>
      </p>
      <p class="card-text">
        <% @thought.source_info[0].uniq.each_with_index do |source_id,index| %>
          <%= link_to edit_source_path(source_id), class: "deco-none" do %><small class="text-muted"><sup><%= index + 1 %></sup><%= Source.find(source_id).title %></small><% end %>
          <br>
        <% end %>
      </p>
    </div>
  </div>
<% end %>