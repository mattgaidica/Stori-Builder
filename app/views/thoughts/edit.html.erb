<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <%= render 'layouts/notice', notice: @notice %>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <%= render 'header', thought: @thought %>
  </div>

  <ul id="strands" class="list-group list-group-item-action" data-url="<%= sort_strands_path %>">
  	<% @thought.strands.each do |strand| %>
  	  <li id="<%= dom_id(strand) %>" class="list-group-item list-group-item-action"><small><%= strand.annotation.body %></small></li>
  	<% end %>
	</ul>

  <br>

  <div id="stori">
    <%= render 'stori', thought: @thought %>
  </div>
  
  <br>
</main>