<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <!-- <p id="notice"><%= notice %></p> -->
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <h1 class="h2">Thoughts</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group mr-2">
        <button class="btn btn-sm btn-outline-secondary">Share</button>
        <button class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
    </div>
  </div>
  <table class="table table-bordered table-dark table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @thoughts.each do |thought| %>
        <tr>
          <td><%= thought.id %></td>
          <td><%= thought.name %></td>
          <td><%= link_to 'Show', thought %></td>
          <td><%= link_to 'Edit', edit_thought_path(thought) %></td>
          <td><%= link_to 'Destroy', thought, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Thought', new_thought_path, :class => "btn btn-primary", :role => "button" %>
</main>
