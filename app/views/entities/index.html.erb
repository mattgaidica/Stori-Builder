<% @title="Entities" %>
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <%= render 'layouts/notice', notice: @notice %>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Entities</h1>
  </div>
  <%= link_to 'New Entity', new_entity_path %>
  <br>
  <br>
  <table class="table table-bordered table-dark table-hover">
    <thead>
      <tr>
        <th>Content</th>
        <th>Has type</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @entities.each do |entity| %>
        <tr>
          <td><%= entity.content %></td>
          <td><%= entity.has_type %></td>
          <td><%= link_to 'Show', entity %></td>
          <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
          <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</main>
<br>
