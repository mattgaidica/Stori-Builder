<% @title="Sources" %>
<%= render 'layouts/notice', notice: @notice %>
<h1>Sources</h1>
<hr>
<br>
<!-- see dataTables.bootstrap4.js for init -->
<table id="data-table" class="table table-sm table-dashboard data-table display responsive no-wrap mb-0 fs--1 w-100">
  <thead class="bg-200">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Author</th>
      <th>Annots</th>
      <th>Tags</th>
      <th>Date Added</th>
      <th>Date Updated</th>
    </tr>
  </thead>
  <tbody class="bg-white">
    <% @sources.order(:title).each do |source| %>
      <tr>
        <td><%= source.id %></td>
        <td><a href="<%= edit_source_path(source) %>"><%= truncate(source.title, length: 60, separator: ' ') %></a></td>
        <td><%= source.authors %></td>
        <td><%= source.annotations.count.to_s %></td>
        <td><%= source.hashtags.count.to_s %></td>
        <td><%= source.created_at.strftime("%m/%d/%Y") %></td>
        <td><%= source.updated_at.strftime("%m/%d/%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>