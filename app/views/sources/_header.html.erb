<h1 class="h4 edit-title" contentEditable="true"><%= @source.title %></h1>
<h2 class="h6 edit-authors" contentEditable="true"><%= @source.authors %></h2>
<% unless @source.html_file.nil? %><em class="smaller text-muted"><%= @source.html_file %></em><br><% end %>
<% @source.entities.each do |entity| %>
  <span class="badge badge-dark">#<%= entity.content %></span>
<% end %>
