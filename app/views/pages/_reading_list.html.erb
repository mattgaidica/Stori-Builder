<% if @citations_unread.present? %>
  <%= form_tag read_citations_path, method: :put do %>
    <% @citations_unread.each do |citation| %>
      <div style="margin-bottom:10px;" class="form-check">
        <%= check_box_tag "citation_ids[]", citation.id, citation.is_read, id: "form-check-#{citation.id}", class:"form-check-input" %>
        <label style="display:inline;" class="form-check-label" for=<%= "form-check-#{citation.id}" %>>
          <%= highlight(citation.cited_as, citation.title, highlighter: "<a target='_blank' href='#{citation.link}'>#{citation.title}</a>") %>
        </label>
        <br><small class="text-muted">&rarr; <%= link_to citation.source.title, edit_source_path(citation.source), class: "deco-none" %></small>
      </div>
    <% end %>
    <br>
    <%= submit_tag "Update", class: "btn btn-outline-primary" %> 
  <% end %>
<% else %>
  <p>Nothing to read.</p>
<% end %>

<% if @citations_read.present? %>
  <br>
  <br>
  <h5>Archived</h5>
  <% @citations_read.each do |citation| %>
    <p class="small text-muted"><%= citation.cited_as %><%= link_to raw(" &rarr; "), edit_source_path(citation.source), class: "deco-none" %></p>
  <% end %>
<% end %>