<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <%= render 'layouts/notice', notice: @notice %>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Reading List</h1>
  </div>

  <%= @citations_unread.count > 0 ? render(:partial => "reading_list") : "Nothing to read." %>

  <br>
  <br>
  <h3 class="h5">Archived</h3>
  <% @citations_read.each do |citation| %>
    <p class="small text-muted"><%= citation.cited_as %></p>
  <% end %>
  <br>
</main>