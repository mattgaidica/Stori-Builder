<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
  <%= render 'layouts/notice', notice: @notice %>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">

    <h1 class="h2">Annotations</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <div class="btn-group mr-2">
        <button class="btn btn-sm btn-outline-secondary">Share</button>
        <button class="btn btn-sm btn-outline-secondary">Export</button>
      </div>
    </div>
  </div>
  <table class="table table-bordered table-dark table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Body</th>
        <th>Source</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @annotations.each do |annotation| %>
        <tr>
          <td><%= annotation.id %></td>
          <td><%= annotation.body %></td>
          <td><%= annotation.source.id %></td>
          <td><%= link_to 'Show', annotation %></td>
          <td><%= link_to 'Edit', edit_annotation_path(annotation) %></td>
          <td><%= link_to 'Destroy', annotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Hold', holds_path(:annotation_id => annotation.id), method: :post%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Annotation', new_annotation_path, :class => "btn btn-primary", :role => "button" %>
</main>